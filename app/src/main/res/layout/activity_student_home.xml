<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerWhite"
    tools:context=".ui.StudentHomeActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_courses_student"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_10sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_courses_student"
        app:layout_constraintHeight_percent="0.09"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/btn_add_member"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_add"
                app:tint="@color/blue"
                android:contentDescription="@string/app_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/_5sdp"
                />
            <EditText
                android:id="@+id/edit_add_member"
                android:autofillHints="text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_add_member"
                app:layout_constraintTop_toTopOf="@id/btn_add_member"
                app:layout_constraintBottom_toBottomOf="@id/btn_add_member"
                android:layout_marginStart="@dimen/_7sdp"
                android:paddingVertical="@dimen/_9sdp"
                android:hint="@string/enter_course_id"
                android:paddingStart="@dimen/_7sdp"
                android:textColorHint="@color/hint_grey"
                android:textColor="@color/black"
                tools:text="askjdhuds"
                android:textSize="@dimen/_15sdp"
                android:inputType="text"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>